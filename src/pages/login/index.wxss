/* src/pages/login/index.wxss */
/* 登录页面样式 - 使用绿色主题配色 */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--green-6) 0%, var(--green-7) 100%);
  display: flex;
  flex-direction: column;
  padding: 0 60rpx;
}

/* 头部Logo区域 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  background: #fff;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.welcome-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录方式切换 */
.login-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 60rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.tab-item text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.7);
}

.tab-item.active {
  background: #fff;
}

.tab-item.active text {
  color: #333;
  font-weight: 500;
}

/* 登录内容区域 */
.login-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 微信登录区域 */
.wx-login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-desc {
  margin-bottom: 60rpx;
}

.login-desc text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  border: none;
  position: relative;
  overflow: hidden;
}

.login-btn::after {
  border: none;
}

.wx-login-btn {
  background: var(--green-6);
  color: #fff;
}

.phone-auth-btn {
  background: var(--success-color);
  color: #fff;
}

.phone-login-btn {
  background: #fff;
  color: var(--text-color);
  margin-top: 40rpx;
}

.login-btn[disabled] {
  opacity: 0.6;
}

.btn-icon {
  margin-right: 16rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

/* 手机号登录区域 */
.phone-login-section {
  display: flex;
  flex-direction: column;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.phone-input,
.code-input {
  width: 100%;
  height: 96rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  border: none;
  background: transparent;
}

.code-input-item {
  display: flex;
  align-items: center;
  padding-right: 20rpx;
}

.code-input {
  flex: 1;
  padding-right: 20rpx;
}

.send-code-btn {
  width: 200rpx;
  height: 64rpx;
  background: var(--green-6);
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.send-code-btn.disabled {
  background: var(--disabled-color);
  color: var(--text-color-3);
}

.send-code-btn::after {
  border: none;
}

/* 用户协议 */
.agreement-section {
  padding: 60rpx 0 40rpx;
  text-align: center;
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
}

.link-text {
  color: #fff;
  text-decoration: underline;
}

/* 响应式适配 */
@media (max-height: 600px) {
  .login-header {
    padding: 80rpx 0 40rpx;
  }

  .logo {
    width: 100rpx;
    height: 100rpx;
  }

  .app-name {
    font-size: 40rpx;
  }
}

/* ===== 覆盖为 Vant 原生简洁布局 ===== */
page {
  background: var(--background-color);
}

.login-container {
  background: transparent; /* 使用页面浅灰背景 */
  padding: 24rpx; /* 页面统一留白 */
  min-height: 100vh;
  box-sizing: border-box;
}

.section {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.row {
  display: flex;
  align-items: center;
}
.flex-1 {
  flex: 1;
}
.ml-12 {
  margin-left: 24rpx;
}
.mt-12 {
  margin-top: 24rpx;
}

/* van-tabs 外观微调，贴近官方默认视觉 */
.van-tabs {
  margin-top: 8rpx;
}
.van-tabs__wrap {
  background: #fff;
}
.van-tabs__content {
  padding: 0 0;
}

.agreement-section {
  margin-top: 48rpx;
  text-align: center;
}
.agreement-text {
  font-size: 24rpx;
  color: #969799;
}
.link-text {
  color: #1989fa;
  text-decoration: none;
}
