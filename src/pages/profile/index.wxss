/**src/pages/profile/index.wxss**/
.container {
  background: var(--background-color);
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 页面纵向栈布局，统一模块间距 */
.page-stack {
  display: flex;
  row-gap: 20rpx; /* 模块间统一间距 */
}

.stack-item {
  margin: 0; /* 由 row-gap 控制间距 */
}

/* 用户信息头部 */
.user-header {
  background: var(--background-color-light);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  margin-right: 30rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  color: var(--text-color-3);
  margin-bottom: 15rpx;
}

.user-level {
  display: flex;
  align-items: center;
}

.arrow-icon {
  color: var(--text-color-3);
}

/* 数据统计 */
.stats-section {
  background: var(--background-color-light);
  padding: 30rpx;
  display: flex;
  width: 100%;
  box-sizing: border-box;
}

.stat-item {
  text-align: center;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 0;
}

.stat-number {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-color-2);
}

/* 通用区块 */
.section {
  width: 100%;
  box-sizing: border-box;
}

/* 订单状态 */
.order-status {
  background: var(--background-color-light);
  padding: 30rpx;
  display: flex;
  width: 100%;
  box-sizing: border-box;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  flex: 1;
  min-width: 0;
}

.order-item text {
  font-size: 24rpx;
  color: var(--text-color-2);
  margin-top: 10rpx;
}

.order-item .van-badge {
  position: absolute;
  top: -10rpx;
  right: 20rpx;
}
